<h2> <%= @article.title %> </h2>
<p>
	<%= @article.text %>

	<br>

		<% @article.comments.each do |comment| %>
			<p>
				<%= comment.author %>
				<%= comment.body %>
			</p>	

		<% end %>

	<%= form_for([@article,@article.comments.build]) do |f| %>
		<p>
			<%= f.label :author %><br>
			<%= f.text_field :author %>
		</p>	

		<p>
			<%= f.label :body %><br>
			<%= f.text_area :body %>
		</p>	
		<p>
			<%= f.submit %>
		</p>
</p>
	<% end %>