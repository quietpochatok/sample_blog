<h2>Contact us</h2>

<%= form_for :contact, url: contacts_path do |f| %> <!-- '/contacts' -->
	
	<% if @contact %>
		<p>

			<%= @contact.errors.full_messages %>
				
		
		</p>
	<% end -%>

	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :phone %><br>
		<%= f.text_field :phone %>
	</p>
	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :message %><br>
		<%= f.text_area :message %>
	</p>
	<p>
		<%= f.submit 'Send message' %>
	</p>
	<% end %>