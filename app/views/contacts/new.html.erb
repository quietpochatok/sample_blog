<h2> New contact</h2>

<%= form_for :contact, url: contacts_path do |f| %> <!-- '/contacts' -->

	<p>
		<%= f.label :name %><br>
		<%= f.text_area :name %>
	</p>
	<p>
		<%= f.label :phone %><br>
		<%= f.text_area :phone %>
	</p>
	<p>
		<%= f.label :email %><br>
		<%= f.text_area :email %>
	</p>
	<p>
		<%= f.submit %>
	</p>
	<% end -%>